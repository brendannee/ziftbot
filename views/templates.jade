template(id='question'):
  .question
    .questionText= text
    .answers
        - if (answers)
          - each answer, i in answers
            a.no.multiple(data-next= answer.next, data-type= type, data-value= i)= answer.text
        - else
          a.no(data-type= type, data-value="no", data-product= product)= no
          a.yes(data-type= type, data-value="yes", data-product= product)= yes
  
  
template(id='product'):
  .productContent
    - if (brandName.charAt(0) == 'A')
      article = 'an'
    - else
      article = 'a'
    - if (!recipientType)
      phrase = 'They would love ' + article + ' '
    - else
      phrase = 'Your ' + recipientType + ' would love ' + article + ' '
    .questionText
       span.phrase= phrase
       span.productName #{brandName} #{productName}.
    .answers
      a.no.zift(data-type= 'question') Meh.
      a.yes.zift(href= affiliate, title= brandName + ' ' + productName, data-type= 'product', target="_blank") Zift it!
    .price= price + ' + free shipping'
    .sharing
      a.emailProduct(href="#", data-type="modal") [Email This]
      a.tweetProduct(href="#", data-type="tweet", target="_blank") [Tweet This]

